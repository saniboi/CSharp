<Window x:Class="_05_Markup_Extension.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <Style x:Key="WindowsBackground" TargetType="Border">
            <Setter Property="Background" Value="AliceBlue" />
            <Setter Property="TextBlock.FontSize" Value="20"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Border Style="{StaticResource WindowsBackground}">
            <TextBlock Text="Markup Extension Beispiel"></TextBlock>
        </Border>
    </Grid>
</Window>

